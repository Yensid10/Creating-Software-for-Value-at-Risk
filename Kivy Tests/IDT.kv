#:kivy 1.9.0
# File name: IDK.kv
<ApplicationView>:
    stockList: stockList
    userInputs: userInputs
    orientation: 'horizontal'

    BoxLayout:
        orientation: 'vertical'
        size_hint_x: 0.45
        TextInput:
            font_size: 25
            size_hint_y: None
            height: 43
            hint_text: 'Search'
        ScrollView:
            GridLayout:
                id: stockList
                cols: 1
                size_hint_y: None
                size_hint_x: 1
                height: self.minimum_height

    BoxLayout:
        orientation: 'vertical'
        size_hint_x: 0.55

        Label:
            size_hint: 1, None  # Take up the full width and a specific height
            height: 50  # Set a specific height
            font_size: 25
            text: 'Stock:'
        ScrollView:
            GridLayout:
                id: userInputs
                cols: 2
                size_hint_y: None
                size_hint_x: 1
                spacing: 5
                height: self.minimum_height
        Label:
            size_hint_y: None
            height: 30
            text: 'VAR:'
            font_size: 25
