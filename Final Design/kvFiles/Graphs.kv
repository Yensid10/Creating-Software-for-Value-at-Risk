#:kivy 2.3.0
# File name: Graphs.kv

<Graphs>:
    BoxLayout:
        orientation: 'vertical'

        BoxLayout:
            id: graphSection
            orientation: 'vertical'
            size_hint_y: 0.75
            canvas.before:
                Color:
                    rgba: 0.2, 0.2, 0.2, 1
                Rectangle:
                    pos: self.pos
                    size: self.size
            canvas.after:
                Color:
                    rgba: 0, 0, 0, 1
                Line:
                    rectangle: self.x, self.y, self.width, self.height
                    width: 1
            
        ScrollView:
            do_scroll_x: True
            do_scroll_y: False
            size_hint_y: 0.25
            canvas.after:
                Color:
                    rgba: 0, 0, 0, 1
                Line:
                    rectangle: self.x, self.y, self.width, self.height
                    width: 1
            GridLayout:
                cols: 10
                size_hint_x: None
                width: self.minimum_width
                Button:
                    text: 'Option 1'
                    background_normal: 'graph reference.png'
                    size_hint_x: None
                    width: 250
                    on_press: root.graph1()
                    canvas.after:
                        Color:
                            rgba: 0, 0, 0, 1
                        Line:
                            rectangle: self.x, self.y, self.width, self.height
                            width: 2
                Button:
                    text: 'Option 2'
                    background_normal: 'graph reference.png'
                    size_hint_x: None
                    width: 250
                    on_press: root.graph2()
                    canvas.after:
                        Color:
                            rgba: 0, 0, 0, 1
                        Line:
                            rectangle: self.x, self.y, self.width, self.height
                            width: 2
                Button:
                    text: 'Option 3'
                    background_normal: 'graph reference.png'
                    size_hint_x: None
                    width: 250
                    on_press: root.graph3()
                    canvas.after:
                        Color:
                            rgba: 0, 0, 0, 1
                        Line:
