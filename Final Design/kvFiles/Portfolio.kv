#:kivy 1.9.0
# File name: Portfolio.kv

<Portfolio>:
    stockCards: stockCards
    stockName: stockName
    totalValue: totalValue
    totalReturn: totalReturn
    totalShares: totalShares
    dailyVaR: dailyVaR
    returnButton: returnButton

    BoxLayout:
        orientation: 'horizontal'
        
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.5

            BoxLayout:
                orientation: 'horizontal'
                size_hint_y: 0.1

                Button:
                    size_hint_x: 0.1
                    height: '50dp'
                    text: '+'
                    background_normal: ''
                    background_color: 0.1961, 0.6392, 0.8078, 1.0
                    on_release: root.openPopup()
                    canvas.after:
                        Color:
                            rgba: 0, 0, 0, 1
                        Line:
                            rectangle: self.x, self.y, self.width, self.height
                            width: 1.3

                BoxLayout:
                    size_hint_x: 0.9
                    canvas.before:
                        Color:
                            rgba: 0.9, 0.9, 0.9, 1
                        Rectangle:
                            pos: self.pos
                            size: self.size
                    canvas.after:
                        Color:
                            rgba: 0, 0, 0, 1
                        Line:
                            rectangle: self.x, self.y, self.width, self.height
                            width: 1.3
                    Label:
                        text: 'PORTFOLIO'
                        color: 0, 0, 0, 1
                        font_size: '25sp'
                        halign: 'center'
                        valign: 'bottom'
            
            ScrollView:
                canvas.before:
                    Color:
                        rgba: 1, 1, 1, 1
                    Rectangle:
                        pos: self.pos
                        size: self.size
                canvas.after:
                    Color:
                        rgba: 0, 0, 0, 1
                    Line:
                        rectangle: self.x, self.y, self.width, self.height
                        width: 1.3

                GridLayout:
                    id: stockCards
                    cols: 1
                    size_hint_y: None
                    height: self.minimum_height

        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.5
            canvas.before:
                Color:
                    rgba: 0.2, 0.2, 0.2, 1
                Rectangle:
                    pos: self.pos
                    size: self.size
            canvas.after:
                Color:
                    rgba: 0, 0, 0, 1
                Line:
                    rectangle: self.x, self.y, self.width, self.height
                    width: 1.3
            Label:
                text: '[u]Total Portfolio Value[/u]'
                id: stockName
                markup: True
                height: '40dp'
                font_size: '24sp'
                halign: 'left'
                valign: 'middle'

            BoxLayout:
                height: '30dp'
                Label:
                    text: 'Total Value (£): --'
                    id: totalValue
                    halign: 'left'

            BoxLayout:
                height: '30dp'
                Label:
                    text: 'Total Return (%): --'
                    id: totalReturn
                    halign: 'left'
                
            BoxLayout:
                height: '30dp'
                Label:
                    text: 'Total No. of Shares: --'
                    id: totalShares
                    halign: 'left'

            BoxLayout:
                height: '30dp'
                Label:
                    text: '5% Daily VaR (£): --'
                    id: dailyVaR
                    halign: 'left'

    AnchorLayout:
        anchor_x: 'right'
        anchor_y: 'top'
        # BoxLayout:
        #     size_hint: None, None
        #     size: '60dp', '60dp'
        #     canvas.before:
        #         Color:
        #             rgba: 0, 0, 0, 1  # Black
        #         Line:
        #             width: 0.5
        #             rectangle: self.x, self.y, self.width, self.height
        Button:
            id: returnButton
            text: 'X'
            font_size: '40sp'
            size_hint: None, None
            size: '60dp', '60dp'
            background_color: 0, 0, 0, 0
            opacity: 0
            disabled: True
            on_release: root.initialStockTotals()

<Stocks>:
    canvas.before:
        Color:
            rgba: 0.5, 0.5, 0.5, 1
        Rectangle:
            size: self.size
            pos: self.pos
    canvas.after:
        Color:
            rgba: 0, 0, 0, 1
        Line:
            rectangle: self.x, self.y, self.width, self.height
            width: 1.3

<InputStock>:
    inputTicker: inputTicker
    inputShares: inputShares
    title: 'Create/Update Holding'
    size_hint: (0.8, 0.6)
    auto_dismiss: False

    BoxLayout:
        orientation: 'vertical'

        BoxLayout:
            padding: [10, 10, 10, 10]  
            size_hint_y: None
            height: '50dp' 
            
            AnchorLayout:
                anchor_x: 'right'
                anchor_y: 'top'
                Button:
                    size_hint: None, None
                    size: '40dp', '40dp'
                    text: 'X'
                    on_release: root.dismiss()
        
        BoxLayout:
            orientation: 'vertical'
            padding: '12dp'
            spacing: '8dp'

            TextInput:
                id: inputTicker
                hint_text: 'Stock Ticker'
                size_hint_y: None
                height: '30dp'
                multiline: False

            TextInput:
                id: inputShares
                hint_text: 'No. of Shares'
                size_hint_y: None
                height: '30dp'
                multiline: False

            Button:
                text: 'Save'
                size_hint_y: None
                height: '40dp'
                on_release: root.saveStock()


