#:kivy 1.9.0
# File name: Portfolio.kv

<Portfolio>:
    stockCards: stockCards
    stockName: stockName
    totalValue: totalValue
    totalReturn: totalReturn
    totalShares: totalShares
    dailyVaR: dailyVaR
    returnButton: returnButton
    # deleteButton: deleteButton
    adjDeleteButton: adjDeleteButton

    BoxLayout:
        orientation: 'horizontal'
        
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.6

            BoxLayout:
                orientation: 'horizontal'
                size_hint_y: 0.1

                Button:
                    size_hint_x: 0.1
                    height: '50dp'
                    text: '+'
                    background_normal: ''
                    background_color: 0.1961, 0.6392, 0.8078, 1.0
                    on_release: root.openPopup()
                    canvas.after:
                        Color:
                            rgba: 0, 0, 0, 1
                        Line:
                            rectangle: self.x, self.y, self.width, self.height
                            width: 1.3

                BoxLayout:
                    size_hint_x: 0.9
                    canvas.before:
                        Color:
                            rgba: 0.9, 0.9, 0.9, 1
                        Rectangle:
                            pos: self.pos
                            size: self.size
                    canvas.after:
                        Color:
                            rgba: 0, 0, 0, 1
                        Line:
                            rectangle: self.x, self.y, self.width, self.height
                            width: 1.3
                    Label:
                        text: 'STOCKS'
                        color: 0, 0, 0, 1
                        font_size: '25sp'
                        halign: 'center'
                        valign: 'bottom'
            
            ScrollView:
                canvas.before:
                    Color:
                        rgba: 1, 1, 1, 1
                    Rectangle:
                        pos: self.pos
                        size: self.size
                canvas.after:
                    Color:
                        rgba: 0, 0, 0, 1
                    Line:
                        rectangle: self.x, self.y, self.width, self.height
                        width: 1.3

                GridLayout:
                    id: stockCards
                    cols: 1
                    size_hint_y: None
                    height: self.minimum_height

        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.4
            # spacing: '-50sp'            
            canvas.before:
                Color:
                    rgba: 0.2, 0.2, 0.2, 1
                Rectangle:
                    pos: self.pos
                    size: self.size
            canvas.after:
                Color:
                    rgba: 0, 0, 0, 1
                Line:
                    rectangle: self.x, self.y, self.width, self.height
                    width: 1.3
            Label:
                id: stockName
                markup: True
                font_size: '30sp'
            
            

            BoxLayout:
                Label:
                    id: totalValue
                    font_size: '25sp'
            
            BoxLayout:
                Label:
                    id: totalReturn
                    font_size: '25sp'
                    
            BoxLayout:
                Label:
                    id: totalShares
                    font_size: '25sp'
            
            BoxLayout:
                Label:
                    id: dailyVaR
                    font_size: '25sp'
            BoxLayout:
                size_hint_y: 1
                padding: '15sp'
            
                Button:
                    id: adjDeleteButton
                    # text: 'Delete Stock'
                    size_hint: 0.2, 0.7
                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                    # opacity: 0
                    # disabled: True
                    on_release: root.adjDeleteHandler()

    AnchorLayout:
        anchor_x: 'right'
        anchor_y: 'top'
        Button:
            id: returnButton
            text: 'X'
            font_size: '35sp'
            size_hint: None, None
            size: '40dp', '40dp'
            background_color: 0, 0, 0, 0
            opacity: 0
            disabled: True
            on_release: root.initialStockTotals()

<Stocks>:
    canvas.after:
        Color:
            rgba: 0, 0, 0, 1
        Line:
            rectangle: self.x, self.y, self.width, self.height
            width: 1.3
    

<InputStock>:
    inputTicker: inputTicker
    inputShares: inputShares
    size_hint: 0.5, 0.5
    title: '                                   Create/Update Holding'

    BoxLayout:
        orientation: 'vertical'
        padding: '12dp'
        spacing: '8dp'
        Label:
            text: 'If you enter a stock you already own, it will\nupdate your No. of Shares, with a new inital price.'
            halign: 'center'
            valign: 'center'

        TextInput:
            id: inputTicker
            hint_text: 'Stock Ticker'
            size_hint_y: None
            height: '30dp'
            multiline: False
            focus_next: inputShares

        TextInput:
            id: inputShares
            hint_text: 'No. of Shares'
            size_hint_y: None
            height: '30dp'
            multiline: False
            focus_previous: inputTicker

        Button:
            text: 'Save'
            size_hint_y: None
            height: '40dp'
            on_release: root.saveStock()


<ConfirmDelete>:
    size_hint: 0.5, 0.35
    title: '                                           Confirm Deletion'

    BoxLayout:
        orientation: 'vertical'
        spacing: 10

        Label:
            text: "Are you sure you want to delete this stock?\n\nIt will be permanent."
            halign: 'center'
            valign: 'center'

        BoxLayout:
            size_hint_y: None
            height: '50sp'

            Button:
                text: "Yes"
                on_release: root.on_confirm()

            Button:
                text: "No"
                on_release: root.dismiss()


<AdjustVaRPopup>:
    timeHoriInput: timeHoriInput
    riskLevelInput: riskLevelInput
    size_hint: 0.5, 0.5
    title: '                                     Adjust VaR Parameters'

    BoxLayout:
        orientation: 'vertical'
        spacing: '10dp'
        padding: '20dp'

        Label:
            text: "Speak about some VaR stuff here"
            halign: 'center'
            valign: 'center'

        TextInput:
            id: timeHoriInput
            hint_text: 'Time Horizon (days)'
            input_filter: 'int'
            size_hint_y: None
            height: '30dp'
            multiline: False

        TextInput:
            id: riskLevelInput
            hint_text: 'Risk Level Percentage'
            input_filter: 'int'
            size_hint_y: None
            height: '30dp'
            multiline: False

        Button:
            text: 'Submit'
            size_hint_y: None
            height: '50dp'
            on_release: root.submit()
